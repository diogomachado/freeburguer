    <icon src="resources/ios/icon/icon-60@2x.png" width="120" height="120"/>
    <icon src="resources/ios/icon/icon-60@3x.png" width="180" height="180"/>
    <icon src="resources/ios/icon/icon-72.png" width="72" height="72"/>
    <icon src="resources/ios/icon/icon-72@2x.png" width="144" height="144"/>
    <icon src="resources/ios/icon/icon-76.png" width="76" height="76"/>
    <icon src="resources/ios/icon/icon-76@2x.png" width="152" height="152"/>
    <icon src="resources/ios/icon/icon-83.5@2x.png" width="167" height="167"/>
    <icon src="resources/ios/icon/icon-small.png" width="29" height="29"/>
    <icon src="resources/ios/icon/icon-small@2x.png" width="58" height="58"/>
    <icon src="resources/ios/icon/icon-small@3x.png" width="87" height="87"/>
  </platform>
  <platform name="android">
    <preference name="StatusBarBackgroundColor" value="#283593"/>
  </platform>
  <platform name="ios">
    <preference name="StatusBarOverlaysWebView" value="false"/>
    <preference name="StatusBarBackgroundColor" value="#3949AB"/>
  </platform>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <plugin name="cordova-plugin-whitelist" version="1"/>
  <plugin name="cordova-plugin-statusbar" spec="~2.1.3"/>
  <plugin name="cordova-plugin-splashscreen" spec="~3.2.2"/>
  <plugin name="cordova-plugin-device" spec="~1.1.3"/>
  <plugin name="cordova-plugin-dialogs" spec="~1.3.2"/>
  <plugin name="cordova-plugin-vibration" spec="~2.1.4"/>
  <plugin name="phonegap-plugin-barcodescanner" spec="~6.0.6">
    <variable name="CAMERA_USAGE_DESCRIPTION" value="Para scanear o QRCode das empresas"/>
  </plugin>
  <plugin name="cordova-plugin-network-information" spec="~1.3.2"/>
  <plugin name="onesignal-cordova-plugin" spec="~2.2.0"/>
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar"/>
    <param name="onload" value="true"/>
  </feature>
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashScreenDelay" value="5000"/>
  <preference name="FadeSplashScreenDuration" value="1000"/>
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <icon src="resources/android/icon/drawable-xhdpi-icon.png"/>
</widget>